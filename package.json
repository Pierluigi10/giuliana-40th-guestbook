{
  "name": "giuliana-guestbook",
  "version": "0.1.0",
  "private": true,
  "description": "Guestbook web app for Giuliana's 40th birthday",
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "setup:storage": "node -r dotenv/config -e \"require('dotenv').config({path:'.env.local'});require('child_process').execSync('npx tsx scripts/setup-storage-bucket.ts',{stdio:'inherit',env:process.env})\"",
    "verify:storage": "node -r dotenv/config -e \"require('dotenv').config({path:'.env.local'});require('child_process').execSync('npx tsx scripts/verify-storage-policies.ts',{stdio:'inherit',env:process.env})\"",
    "test:upload": "node -r dotenv/config -e \"require('dotenv').config({path:'.env.local'});require('child_process').execSync('npx tsx scripts/test-upload-permissions.ts',{stdio:'inherit',env:process.env})\""
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.3",
    "@types/archiver": "^7.0.0",
    "@types/nprogress": "^0.2.3",
    "@types/pdfkit": "^0.17.4",
    "archiver": "^7.0.1",
    "browser-image-compression": "^2.0.2",
    "canvas-confetti": "^1.9.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.0.3",
    "isomorphic-dompurify": "^2.9.0",
    "lucide-react": "^0.309.0",
    "next": "^16.1.4",
    "nprogress": "^0.2.0",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-masonry-css": "^1.0.16",
    "resend": "^6.8.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0",
